<AssetMetaData>
    <AssetTemplate>
        <MatchingCriteria AssetTemplateMatchingStyle="Extension">
            <Extension value=".png" />
        </MatchingCriteria>
        <Template AssetTemplateCreationMethod="Simple">
            <Asset>
                <Strings>
                    <String Key="GameAssetName" Value="{FilepathDisplayName}" />
                </Strings>
            </Asset>
        </Template>
    </AssetTemplate>
    <AssetLayout>
        <Data Type="String" Map="TestTextInput" />
        <Data Type="String" Filter="SplitUVMethod" Map="TextureUVMethod" MapType="Single" />
        <Data Type="Vector4I" Map="TextureUV" MapType="Array" />
    </AssetLayout>
</AssetMetaData>